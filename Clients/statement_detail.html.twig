{% extends '@FOSUser/layout_admin.html.twig' %}
{% block private_css %}
    <link rel="stylesheet" href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}">
{% endblock %}
{% block page_header %}{{ updatedAt|date('Y-m-d') }}日结单详情{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-xd-12">
            <div class="box">
                <div class="box-header"><a href="{{ path('productdetail',{'id':client_id}) }}"><button>返回产品详情</button></a></div>
            <div class="box-body">
                <table id="statement" class="table table-bordered table-striped" style="font-size: 12px">
                    <thead>
                    <tr>
                        <th>流水号</th>
                        <th>结算日期</th>
                        <th>客户账号</th>
                        <th>结算编号</th>
                        <th>市场编号</th>
                        <th>品种编号</th>
                        <th>合约编号</th>
                        <th>委托来源</th>
                        <th>买卖</th>
                        <th>开平</th>
                        <th>成交数量</th>
                        <th>成交价格</th>
                        <th>客户手续费</th>
                        <th>手续费币种</th>
                        <th>成交时间</th>
                    </tr>
                    </thead>
                    <tbody>
                   {{ content|raw }}
                    </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block private_js %}
    <!--DataTables-->
    <script src="{{ asset('js/dataTables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('js/dataTables/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/slimScroll/jquery.slimscroll.min.js') }}"></script>
    <script src="{{ asset('js/fastclick/fastclick.min.js') }}"></script>
    <script src="{{ asset('js/demo.js') }}"></script>
    <script>
        $(function () {
            $("#statement").DataTable();
            $('#products_list2').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true
            });
        });
    </script>
{% endblock %}