{% for agent in agents %}
    <div class="box box-solid bg-teal-gradient">
         <div class="box-header">
             <div class="notice_item">
                 <input type="checkbox"  name="select_all_clients[]" id="select_all_clients" value="{{ agent.id }}">全选
             </div>
             <div class="notice_item" style="color:black">
                 <input  type="checkbox" name="Notice[users][]" value="{{ agent.id }}">{{ agent.name }}(代理)
             </div>
        </div>
        <div class="box-body">
            {% for client in agent.getClients() %}
                <div class="notice_item">
                    <input type="checkbox" name="Notice[users][]" id="client" sub="{{ client.getAgent().id }}" value="{{ client.getSingleUser().id }}">{{ client.name }}
                </div>
            {% endfor %}
        </div>
    </div>
{% endfor %}

