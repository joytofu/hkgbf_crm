{% extends "FOSUserBundle::layout_admin.html.twig" %}
{% block hidden_username %}{{ username }}{% endblock %}
{% block page_header %}创建用户{% endblock %}
{% block content %}
    <div class="box box-primary" style="width: 50%;margin-left: 23%">
        <div class="box-header with-border">
            <h3 class="box-title">创建用户</h3>
        </div>

        {{ form_start(form) }}
        <div class="box-body">
            <div class="form-group">
                <label class="control-label">角色权限</label>
                <select id="roles" name="roles">
                    <option value="ROLE_AGENT_ADMIN">代理管理</option>
                    <option value="ROLE_AGENT">代理</option>
                    <option value="ROLE_REGULAR">普通会员</option>
                    <option value="ROLE_GOLDEN">金卡会员</option>
                    <option value="ROLE_DIAMOND">钻石会员</option>
                    <option value="ROLE_ADMIN">普通管理员</option>
                </select>
            </div>
            <div class="form-group">
                {{ form_widget(form.imageFile) }}
            </div>
            <div class="form-group">
                {{ form_row(form.username) }}
            </div>
            <div class="form-group">
                {{ form_row(form.password) }}
            </div>
            <div class="form-group">
                {{ form_row(form.name) }}
            </div>
            <div class="form-group">
                {{ form_row(form.cellphone) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
        </div>

        <div class="box-footer">
            <button class="btn btn-primary" type="submit" id="_submit" name="_submit" >添加用户</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}