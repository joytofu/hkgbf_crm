{% extends "FOSUserBundle::layout_admin.html.twig" %}
{% block hidden_username %}{{ username }}{% endblock %}
{% block page_header %}创建待办事项{% endblock %}
{% block content %}
    <div class="box box-primary" style="width: 50%;margin-left: 23%">
        <div class="box-header with-border">
            <h3 class="box-title">创建待办事项</h3>
        </div>

        {{ form_start(form) }}
        <div class="box-body">
            <div class="form-group">
                {{ form_widget(form.category) }}
            </div>
            <div class="form-group">
                {{ form_row(form.title) }}
            </div>
            <div class="form-group">
                {{ form_row(form.content,{'attr':{'rows':'8'}}) }}
            </div>
        </div>
        <div class="box-footer">
            <button class="btn btn-primary" type="submit" id="_submit" name="_submit" >确定添加</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}